<div class='row'>


      <fieldset class="large-12 columns center">
          <legend class='text-center'>Get lunch updates from your favorite local spots</legend>

            <div class='row'>
              <div class='large-8 large-centered columns'>

                    <%= form_tag({controller: 'subscriptions', action: 'create'}) do %>
                    <%= text_field_tag(:email, nil, placeholder: 'enter email here') %>
                    <%= text_field_tag(:phone_number, nil, placeholder: 'enter phone number here') %>


              <div class="row">
                <div class="large-12 columns">
                  <label>Which updates do you want?</label>

                  <% @feeds.each do |feed| %>
                    <%= check_box_tag(feed.name) %>
                    <%= label_tag(feed.name) %>
                  <% end %>

                </div>
              </div>


              <div class='row'>
                <div class='large-6 large-centered columns'>
                    <%= submit_tag("GO", class: "button postfix") %>
                    <% end %>
                </div>
              </div>

            </div>
          </div>
      </fieldset>

</div>